<ImagesExemple@GridLayout>
    cols: 3
    Image:
        source: "images/cake.jpg"
    Image:
        source: "images/cake.jpg"
        allow_stretch: True
    Image:
        source: "images/cake.jpg"
        keep_ratio: False
        allow_stretch: True
    Image:
        source: "images/donut.gif"
        anim_delay: 1/60


<WidgetsExemple>:
    cols: 3
    ToggleButton:
        text: "OFF"
        on_state: root.on_toggle_button_state(self)
        size_hint: None, 1
        width: "100dp"
    Button:
        text: "Compter"
        on_press: root.on_button_click()
        disabled: not root.compteur_actif
    Label:
        text: root.mon_texte
        font_name: "fonts/Lcd.ttf"
        font_size: "80dp"
        color: 1, 0.5, 1, 1
    Switch:
        id: mon_switch
        on_active: root.on_switch_active(self)
        size_hint: None, 1
        width: "100dp"
        active: True
    Slider:
        id: mon_slider
        min: 0
        max: 100
        value: 50
        # on_value: root.on_slider_value(self)
        orientation: "vertical"
        disabled: not mon_switch.active
    BoxLayout:
        orientation: "vertical"
        Label:
            text: str(int(mon_slider.value))
        ProgressBar:
            max: 100
            value: mon_slider.value
    TextInput:
        id: my_text_input
        size_hint: None, 1
        width: "100dp"
        text: "toto"
        multiline: False
        on_text_validate: root.on_text_validate(self)
    Label:
        text: "Vous Ãªtes: " + root.text_input_str