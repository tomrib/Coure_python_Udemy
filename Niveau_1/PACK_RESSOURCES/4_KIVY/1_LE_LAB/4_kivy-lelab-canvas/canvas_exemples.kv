
#:set s dp(150)

<CanvasExemplesTabs@TabbedPanel>:
    do_default_tab: False
    TabbedPanelItem:
        text: "1"
        CanvasExemple1:
    TabbedPanelItem:
        text: "2"
        CanvasExemple2:
    TabbedPanelItem:
        text: "3"
        CanvasExemple3:
    TabbedPanelItem:
        text: "4"
        CanvasExemple4:
    TabbedPanelItem:
        text: "5"
        CanvasExemple5:
    TabbedPanelItem:
        text: "6"
        CanvasExemple6:
    TabbedPanelItem:
        text: "7"
        CanvasExemple7:

<CanvasExemple1>:
    canvas:
        Rectangle:
            pos: self.center_x-s/2, self.center_y-s/2
            size: s, s
        Ellipse:
            pos: 200, 500
            size: s, s/2
        Line:
            points: (0, 0, self.width/4, 100, self.width/2, 0, self.width*3/4,100, self.width, 0)
            width: 2


<CanvasExemple2>:
    canvas:
        Line:
            points: (0, self.height/2, self.width, self.height/2)
            width: 2
        Line:
            points: (self.width/2, 0, self.width/2, self.height)
            width: 2

<CanvasExemple3>:
    canvas:
        Color:
            rgba: 1, 0, 0, .3
        Line:
            circle: (200, 200, 100)  # center_x, center_y, rayon
            width: 2
        Line:
            ellipse: (500, 300, 100, 200)
            width: 4
        Color:
            rgba: 0, 0, 1, 1
        Line:
            rectangle: (800, 100, 300, 200) # x, y, w, h
            width: 2

<CanvasExemple4>:
    Button:
        pos: 100, 400
        text: "A"
        on_press: root.on_button_a_click()


<CanvasExemple6>:
    BoxLayout:
        size: root.size
        Widget:
            canvas:
                Color:
                    rgb: 0, 1, 0
                Rectangle:
                    size: self.size
        RelativeLayout:
            canvas:
                Color:
                    rgb: 0, 0, 1
                Rectangle:
                    size: self.size

<CanvasExemple7>:
    RelativeLayout:
        canvas:
            Color:
                rgb: 0, 0, 1
            Rectangle:
                size: self.size
    RelativeLayout:
        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                size: self.size
    RelativeLayout:
        canvas:
            Color:
                rgb: 1, 0, 0
            Rectangle:
                size: self.size

