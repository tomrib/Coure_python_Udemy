#:import track track
#:import play_indicator play_indicator

MainWidget:

<ControlButton@Button>:

<MainWidget>:
    tracks_layout: tracks_layout
    play_indicator_widget: play_indicator_widget
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint_y: None
            height: dp(50)
            ControlButton:
                text: "PLAY"
                on_press: root.on_play_button_pressed()
            ControlButton:
                text: "STOP"
                on_press: root.on_stop_button_pressed()
            ControlButton:
                text: "-"
                size_hint_x: None
                width: dp(50)
                on_press: root.bpm -= 5
            Label:
                text: str(root.bpm)
                size_hint_x: None
                width: dp(80)
            ControlButton:
                text: "+"
                size_hint_x: None
                width: dp(50)
                on_press: root.bpm += 5
        PlayIndicatorWidget:
            id: play_indicator_widget
            size_hint_y: None
            height: dp(8)
            left_align: root.TRACK_STEPS_LEFT_ALIGN
        BoxLayout:
            id: tracks_layout
            orientation: "vertical"
